---
import moviesImg from "../assets/projects/movies.png";
import portfolioImg from "../assets/projects/portfolio.png";
import salonImg from "../assets/projects/salon.png";
import tiendaImg from "../assets/projects/tienda.png";

const projects = [
  {
    title: "Tienda Artesana",
    description: "Responsive marketplace website | MVP Fullstack",
    tech: ["React", "Tailwind", "Nodejs", "APIs", "MongoDB"],
    img: tiendaImg.src,
    link: "https://c21-05-ft-node-react-mirror-frontend-64qbwssi2-muyvisual.vercel.app/",
  },
  {
    title: "Naty Salon",
    description: "Responsive website for a hair salon | Landing Page",
    tech: ["React", "Bootstrap", "Kinde"],
    img: salonImg.src,
    link: "https://naty-salon.vercel.app/",
  },
  {
    title: "Camila Sironi - Portfolio",
    description: "Interactive portfolio with smooth transitions and mobile-first design",
    tech: ["Astro", "JavaScript", "CSS3"],
    img: portfolioImg.src,
    link: "https://camila-portfolio-dun.vercel.app/",
  },
  {
    title: "Movies Page Template",
    description: "A page to see a list of your favourite movies, rate them and add more.",
    tech: ["APIs", "React", "Express", "Nodejs", "MongoDB"],
    img: moviesImg.src,
    link: "https://movies-front-five.vercel.app/",
  }
];
---

<section id="projects" class="projects">
  <h2 class="section-title">Some of my Projects</h2>

  <div class="grid">
    {projects.map((p) => (
      <a class="card" href={p.link} target="_blank">
        <div class="img-wrapper">
          <img src={p.img} alt={p.title} loading="lazy" />
        </div>

        <div class="content">
          <h3>{p.title}</h3>
          <p>{p.description}</p>

          <div class="tags">
            {p.tech.map((t) => (
              <span class="tag">{t}</span>
            ))}
          </div>
        </div>
      </a>
    ))}
  </div>
</section>

<style>
  .projects {
  padding: 140px 20px;
  max-width: 1200px;
  margin: auto;
  }

  .section-title {
    font-size: 2.4rem;
    margin-bottom: 40px;
    text-align: center;
    color: var(--accent);
  }

  .grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(320px, 1fr));
    gap: 40px;
  }

  .card {
    display: block;
    background: #1a1a1a;
    border-radius: 14px;
    overflow: hidden;
    text-decoration: none;
    color: var(--text);
    transition: transform 0.25s ease, box-shadow 0.25s ease;
  }

  .card:hover {
    transform: translateY(-6px);
    box-shadow: 0 16px 40px rgba(0,0,0,0.45);
  }

  .img-wrapper {
    overflow: hidden;
    height: 220px;
    background: #000;
  }

  .img-wrapper img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 0.5s ease, filter 0.5s ease;
  }

  .card:hover .img-wrapper img {
    transform: scale(1.08);
    filter: brightness(0.85);
  }

  .content {
    padding: 20px 24px 28px;
  }

  .content h3 {
    font-size: 1.4rem;
    margin-bottom: 10px;
    color: white;
  }

  .content p {
    font-size: 1rem;
    opacity: 0.85;
    margin-bottom: 14px;
    line-height: 1.5;
  }

  .tags {
    display: flex;
    flex-wrap: wrap;
    gap: 8px;
  }

  .tag {
    padding: 6px 12px;
    background: rgba(255,255,255,0.07);
    border: 1px solid rgba(255,255,255,0.15);
    border-radius: 6px;
    font-size: 0.85rem;
  }

  /* Responsive */
  @media (max-width: 800px) {
    .img-wrapper {
      height: 180px;
    }
  }
</style>
