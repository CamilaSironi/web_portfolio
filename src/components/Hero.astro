<section class="hero">
  <div class="content">
    <h1 class="title">
      Hi, I’m <span class="highlight">Camila</span>.
      <br />
      <span id="typed"></span><span class="cursor"></span>
    </h1>

    <p class="subtitle">
      Frontend Developer specializing in React, UI/UX and smooth user interactions.
    </p>

    <div class="cta">
      <a href="#projects" class="btn">View Projects</a>
      <a href="https://www.canva.com/design/DAG6y9hnjwk/q3rBov1S7AIKFLFEc6c-qw/edit?utm_content=DAG6y9hnjwk&utm_campaign=designshare&utm_medium=link2&utm_source=sharebutton" class="btn secondary" target="_blank">View CV</a>
    </div>
  </div>
</section>

<script type="module" client:load is:inline>
  const typed = document.getElementById("typed");

  if (typed) {
    const text = "I build modern and delightful web experiences.";
    let i = 0;
    const speed = 55; // MÁS ALTO = MÁS LENTO

    function type() {
      typed.textContent = text.slice(0, i);
      i++;
      if (i <= text.length) {
        setTimeout(type, speed);
      }
    }

    setTimeout(type, 300);
  }
</script>


<style>
  .hero {
    padding: 120px 20px;
    display: flex;
    justify-content: center;
    text-align: left;
  }

  .content {
    max-width: 800px;
  }

  .title {
    font-size: 2.8rem;
    line-height: 1.2;
    margin-bottom: 20px;
    color: var(--text);
    min-height: 140px; /* evita salto */
  }

  .highlight {
    color: var(--accent);
  }

  /* Cursor typing */
  .cursor {
    display: inline-block;
    width: 10px;
    height: 2.1rem;
    background: var(--accent);
    margin-left: 6px;
    animation: blink 1s infinite steps(2);
  }

  @keyframes blink {
    50% { opacity: 0; }
  }

  .subtitle {
    font-size: 1.2rem;
    color: var(--text-dim);
    margin-bottom: 35px;
    max-width: 600px;
  }

  .cta {
    display: flex;
    gap: 14px;
  }

  .btn {
    padding: 12px 26px;
    border-radius: 6px;
    background: var(--accent);
    color: #0d0d0d;
    font-weight: 600;
    text-decoration: none;
    transition: opacity 0.2s;
  }

  .btn.secondary {
    background: transparent;
    border: 1px solid var(--accent);
    color: var(--accent);
  }

  .btn:hover {
    opacity: 0.85;
  }

  @media (max-width: 700px) {
    .title {
      font-size: 2.1rem;
    }
    .subtitle {
      font-size: 1.05rem;
    }
    .hero {
      padding: 80px 20px;
    }
  }
</style>
