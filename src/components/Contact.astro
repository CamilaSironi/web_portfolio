      </ul>
    </div>
  </div>
</section>

<style>
  .contact {
    padding: 140px 20px;
    max-width: 900px;
    margin: 0 auto;
    text-align: center;
  }

  .section-title {
    font-size: 2rem;
    color: var(--accent);
    margin-bottom: 20px;
  }

  .intro {
    max-width: 600px;
    margin: 0 auto 40px auto;
    color: var(--text-dim);
    font-size: 1.1rem;
  }

  .terminal-box {
    background: rgba(255,255,255,0.04);
    border: 1px solid rgba(255,255,255,0.1);
    border-radius: 10px;
    overflow: hidden;
    backdrop-filter: blur(8px);
  }

  .terminal-header {
    background: rgba(255,255,255,0.07);
    padding: 10px 14px;
    display: flex;
    gap: 8px;
  }

  .dot {
    width: 12px;
    height: 12px;
    border-radius: 50%;
    display: inline-block;
  }
  .red { background: #ff5f56; }
  .yellow { background: #ffbd2e; }
  .green { background: #27c93f; }

  .terminal-content {
    padding: 30px;
    text-align: left;
    font-family: "JetBrains Mono", monospace;
  }

  .command {
    color: var(--accent);
    margin-bottom: 25px;
    font-weight: 500;
  }

  .contact-list {
    list-style: none;
    padding: 0;
    line-height: 1.8;
  }

  .contact-list li {
    display: flex;
    gap: 10px;
  }

  .label {
    color: var(--accent);
    font-weight: 500;
  }

  a {
    color: var(--text);
    text-decoration: none;
    transition: color 0.2s ease;
  }

  a:hover {
    color: var(--accent);
  }

  @media (max-width: 700px) {
    .contact-list li {
      flex-direction: column;
      gap: 2px;
    }
  }
</style>
